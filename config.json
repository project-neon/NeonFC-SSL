{
    "network" : {
        "multicast_ip": "224.5.23.2",
        "host_ip": "localhost",
        "vision_port": 10006,
        "autoref_port": 10010,
        "command_port": 20011
    },
    "serial": {
        "command_port": "/dev/ttyACM0",
        "baud_rate": 115200
    },
    "match" : {
        "team_1": "Neon",
        "team_2": "Test",
        "event": "Test",
        "team_side": "left",
        "team_color": "blue",
        "robots_ids": [0, 1, 2],
        "time_logging": false
    },
    "logger": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "simple": {
                "format": "[%(levelname)s|%(module)s|L%(lineno)d] %(asctime)s: %(message)s",
                "datefmt": "%H:%M:%S"
            },
            "jsonl": {
                "()": "logger.JSONLFormatter",
                "fmt_keys": {
                  "message": "message",
                  "timestamp": "timestamp",
                  "logger": "name"
                },
                "datefmt": "%H:%M:%S"
            },
            "game_format": {
                "()": "logger.JSONLFormatter",
                "fmt_keys": {
                  "message": "message",
                  "timestamp": "timestamp"
                },
                "datefmt": "%H:%M:%S.%f"
            }
        },
        "filters": {
          "game_events": {
            "()": "logger.GameFilter"
          }
        },
        "handlers": {
          "stdout": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
          },
          "stderr": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "simple",
            "stream": "ext://sys.stderr"
          },
          "main_log": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DECISION",
            "formatter": "jsonl",
            "filename": "logs/neon_fc.log.jsonl",
            "maxBytes": 3000000,
            "backupCount": 3
          },
          "game_log": {
            "class": "logging.handlers.RotatingFileHandler",
            "filters": ["game_events"],
            "formatter": "game_format",
            "filename": "logs/neon_fc.gamelog.jsonl",
            "maxBytes": 3000000,
            "backupCount": 3
          }
        },
        "loggers": {
          "root": {
            "level": "NOTSET",
            "handlers": [
              "stdout",
              "stderr",
              "main_log",
              "game_log"
            ]
          }
        }
    }
}